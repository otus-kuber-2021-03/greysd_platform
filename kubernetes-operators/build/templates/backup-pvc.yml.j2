apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: "backup-{{ name }}-pvc"
spec:
  accessModes:
    - "ReadWriteOnce"
  resources:
    requests:
      storage: {{ storage_size }}
  storageClassName: standard
  volumeName: "backup-{{ name }}-pv"
  selector:
    matchLabels:
      pv-usage: "backup-{{ name }}"
